{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "sourceMap": false,
    "module": "commonjs",
    "downlevelIteration": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "yuzu": ["packages/yuzu"],
      "yuzu-*": ["packages/*"],
      "yuzu/*": ["packages/yuzu/*"]
    }
  },
  "include": [
    "./packages/*/src/**/*",
    "./packages/*/test/**/*",
    "./types/**/*"
  ],
  "exclude": ["node_modules"]
}
