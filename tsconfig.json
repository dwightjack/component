{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "sourceMap": false,
    "module": "commonjs",
    "downlevelIteration": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@yuzu/*": ["packages/*"]
    }
  },
  "include": ["./packages/*/src/**/*", "./types/**/*"],
  "exclude": ["node_modules"]
}
