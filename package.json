{
  "name": "yuzu",
  "description": "Old school component management",
  "private": true,
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://github.com/dwightjack/yuzu",
  "author": "Marco Solazzi",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dwightjack/yuzu.git"
  },
  "bugs": "https://github.com/dwightjack/yuzu/issues",
  "scripts": {
    "prepublishOnly": "npm run release",
    "release": "yarn lint && yarn typecheck && yarn test && yarn docs && yarn bundle",
    "lint": "eslint ./packages/*/{src,test}/**/*.ts ./scripts/**/*.js ./examples/*/src/**/*.ts",
    "typecheck": "tsc --noEmit -p .",
    "bundle": "lerna run build",
    "docs": "node ./scripts/doc.js",
    "test": "karma start karma.conf.js --single-run",
    "dev": "karma start karma.conf.js",
    "demo": "rollup -c ./examples/rollup.config.js -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "devDependencies": {
    "@types/jasmine": "~3.3.13",
    "@types/node": "^12.0.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "core-js": "^3.1.3",
    "cpy": "^7.1.0",
    "documentation": "^11.0.0",
    "eslint": "~6.6.0",
    "eslint-config-prettier": "~6.5.0",
    "eslint-plugin-node": "~10.0.0",
    "eslint-plugin-prettier": "~3.1.1",
    "execa": "^1.0.0",
    "fast-glob": "^2.2.7",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.9",
    "jasmine-core": "~3.4.0",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-typescript": "~4.1.0",
    "karma-typescript-es6-transform": "~4.1.0",
    "lerna": "^3.14.1",
    "make-dir": "^3.0.0",
    "prettier": "~1.19.1",
    "puppeteer": "~1.17.0",
    "rimraf": "~2.6.2",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  }
}
