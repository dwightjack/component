{
  "name": "yuzu",
  "description": "Old school component management",
  "private": true,
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://github.com/dwightjack/yuzu",
  "author": "Marco Solazzi",
  "unpkg": "dist/index.umd.js",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.m.js",
  "module": "dist/index.m.js",
  "amdName": "YZ",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dwightjack/yuzu.git"
  },
  "bugs": "https://github.com/dwightjack/yuzu/issues",
  "scripts": {
    "prepublishOnly": "npm run release",
    "release": "yarn lint && yarn types && yarn docs && yarn bundle",
    "lint": "tslint ./packages/*/src/**/*.ts ./packages/*/test/**/*.ts",
    "bundle": "lerna run bundle",
    "docs": "rimraf tmp && tsc --outDir tmp --module ES2015 --target es2017 && rimraf doc && node ./scripts/doc.js",
    "test": "karma start karma.conf.js --single-run"
  },
  "devDependencies": {
    "@types/jasmine": "~2.8.8",
    "core-js": "~2.5.7",
    "documentation": "^8.1.0",
    "eslint": "~5.3.0",
    "eslint-config-prettier": "~3.0.1",
    "eslint-plugin-node": "~7.0.1",
    "eslint-plugin-prettier": "~2.6.2",
    "fast-glob": "^2.2.2",
    "jasmine-core": "~3.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "~1.1.2",
    "karma-typescript": "~3.0.13",
    "karma-typescript-es6-transform": "~1.0.4",
    "lerna": "^3.1.4",
    "prettier": "~1.13.5",
    "puppeteer": "~1.7.0",
    "rimraf": "~2.6.2",
    "rollup": "~0.64.1",
    "rollup-plugin-commonjs": "~9.1.5",
    "rollup-plugin-filesize": "~4.0.1",
    "rollup-plugin-node-resolve": "~3.3.0",
    "rollup-plugin-replace": "~2.0.0",
    "rollup-plugin-typescript2": "~0.16.1",
    "rollup-plugin-uglify": "~4.0.0",
    "serve": "^10.0.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "~1.14.0",
    "typescript": "~3.0.1"
  },
  "dependencies": {
    "dush": "^3.0.0"
  }
}
