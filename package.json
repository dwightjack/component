{
  "name": "yuzu",
  "description": "Old school component management",
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://github.com/dwightjack/yuzu",
  "author": "Marco Solazzi",
  "unpkg": "umd/index.min.js",
  "main": "dist/index.js",
  "jsnext:main": "es/index.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "es",
    "src",
    "types",
    "umd",
    "typings"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dwightjack/yuzu.git"
  },
  "bugs": "https://github.com/dwightjack/yuzu/issues",
  "keywords": [
    "component"
  ],
  "types": "typings/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build:all",
    "build:all": "yarn lint && yarn type-check && yarn types && yarn build:cjs && yarn build:es && yarn build:umd",
    "lint": "tslint ./src/**/*.ts",
    "build:cjs": "rimraf dist && tsc",
    "build:es": "rimraf es && tsc --outDir es --module ES2015",
    "build:umd": "rimraf umd && rollup -c rollup.config.js",
    "types": "rimraf typings && tsc --declaration --emitDeclarationOnly --declarationDir typings",
    "type-check": "tsc --noEmit --pretty",
    "docs": "yarn build:cjs && rimraf doc && node ./scripts/doc.js",
    "test": "karma start karma.conf.js --single-run"
  },
  "devDependencies": {
    "@types/jasmine": "~2.8.8",
    "core-js": "~2.5.7",
    "documentation": "^8.1.0",
    "eslint": "~5.3.0",
    "eslint-config-prettier": "~3.0.1",
    "eslint-plugin-node": "~7.0.1",
    "eslint-plugin-prettier": "~2.6.2",
    "fast-glob": "^2.2.2",
    "jasmine-core": "~3.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-jasmine": "~1.1.2",
    "karma-typescript": "~3.0.13",
    "karma-typescript-es6-transform": "~1.0.4",
    "prettier": "~1.13.5",
    "puppeteer": "~1.7.0",
    "rimraf": "~2.6.2",
    "rollup": "~0.64.1",
    "rollup-plugin-commonjs": "~9.1.5",
    "rollup-plugin-filesize": "~4.0.1",
    "rollup-plugin-node-resolve": "~3.3.0",
    "rollup-plugin-replace": "~2.0.0",
    "rollup-plugin-typescript2": "~0.16.1",
    "rollup-plugin-uglify": "~4.0.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "~1.14.0",
    "typescript": "~3.0.1"
  },
  "dependencies": {
    "dush": "^3.0.0"
  }
}
