{
  "name": "yuzu",
  "description": "Old school component management",
  "private": true,
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://github.com/dwightjack/yuzu",
  "author": "Marco Solazzi",
  "unpkg": "dist/index.umd.js",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.m.js",
  "module": "dist/index.m.js",
  "amdName": "YZ",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dwightjack/yuzu.git"
  },
  "bugs": "https://github.com/dwightjack/yuzu/issues",
  "scripts": {
    "prepublishOnly": "npm run release",
    "release": "yarn lint && yarn typecheck && yarn test && yarn docs && yarn bundle",
    "lint": "eslint ./packages/*/{src,test}/**/*.ts ./{config,scripts}/**/*.js ./examples/*/src/**/*.ts",
    "typecheck": "tsc --noEmit -p .",
    "bundle": "lerna run bundle",
    "docs": "node ./scripts/doc.js",
    "test": "karma start karma.conf.js --single-run",
    "dev": "karma start karma.conf.js",
    "demo": "rollup -c ./examples/rollup.config.js -w"
  },
  "devDependencies": {
    "@types/jasmine": "~3.3.12",
    "@types/node": "^12.0.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "core-js": "^3.1.2",
    "cpy": "^7.1.0",
    "documentation": "^11.0.0",
    "eslint": "~5.16.0",
    "eslint-config-prettier": "~4.3.0",
    "eslint-plugin-node": "~9.1.0",
    "eslint-plugin-prettier": "~3.1.0",
    "execa": "^1.0.0",
    "fast-glob": "^2.2.7",
    "gh-pages": "^2.0.1",
    "jasmine-core": "~3.4.0",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-typescript": "~4.0.0",
    "karma-typescript-es6-transform": "~4.0.0",
    "lerna": "^3.13.1",
    "make-dir": "^3.0.0",
    "prettier": "~1.17.1",
    "puppeteer": "~1.17.0",
    "rimraf": "~2.6.2",
    "rollup": "~1.8.0",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-commonjs": "~9.3.0",
    "rollup-plugin-filesize": "~6.0.1",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "~4.0.1",
    "rollup-plugin-replace": "~2.1.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript2": "~0.20.1",
    "rollup-plugin-uglify": "~6.0.2",
    "typescript": "~3.4.5"
  },
  "dependencies": {
    "dush": "superguigui/dush#reference-based-offing"
  }
}
