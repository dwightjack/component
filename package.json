{
  "name": "yuzu",
  "description": "Old school component management",
  "private": true,
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://github.com/dwightjack/yuzu",
  "author": "Marco Solazzi",
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dwightjack/yuzu.git"
  },
  "bugs": "https://github.com/dwightjack/yuzu/issues",
  "scripts": {
    "prepublishOnly": "npm run release",
    "release": "run-s lint typecheck test bundle docs",
    "lint": "eslint \"packages/*/{src,test}/**/*.ts\" \"scripts/**/*.js\" \"examples/src/**/*.ts\"",
    "typecheck": "tsc --noEmit -p .",
    "bundle": "lerna run build --scope=yuzu*",
    "docs": "node ./scripts/doc.js",
    "test": "karma start karma.conf.js --single-run",
    "dev": "karma start karma.conf.js",
    "demo": "lerna run start --scope=examples-yuzu --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "devDependencies": {
    "@types/jasmine": "~3.4.6",
    "@types/node": "^12.12.11",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "core-js": "^3.1.3",
    "cpy": "^7.1.0",
    "documentation": "^12.1.4",
    "eslint": "~6.6.0",
    "eslint-config-prettier": "~6.7.0",
    "eslint-plugin-node": "~10.0.0",
    "eslint-plugin-prettier": "~3.1.1",
    "fast-glob": "^3.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^3.1.0",
    "jasmine-core": "~3.5.0",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-typescript": "5.0.0-beta.0",
    "karma-typescript-es6-transform": "~4.1.0",
    "lerna": "^3.18.5",
    "make-dir": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "~1.19.1",
    "puppeteer": "~2.0.0",
    "rimraf": "~3.0.0",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  }
}
